{
    "compilerOptions": {
    "declaration": false,
    "importHelpers": true,
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
        "declarationMap": true,
        "emitDeclarationOnly": true,
        "isolatedModules": true,
        "lib": [
            "es2022"
        ],
        "module": "esnext",
        "moduleResolution": "bundler",
        "noEmitOnError": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "strict": true,
        "target": "es2022",
        "baseUrl": ".",
        "rootDir": ".",
        "paths": {
            "@/docs": [
                "libs/docs/index.ts"
            ],
            "@/docs/*": [
                "libs/docs/*"
            ],
            "@/shared": [
                "libs/shared/index.ts"
            ],
            "@/shared/*": [
                "libs/shared/*"
            ]
        }
    },
  "exclude": [
    "node_modules",
    "tmp"
  ],
  "compileOnSave": false
}
